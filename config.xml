<?xml version='1.0' encoding='utf-8'?>
<widget id="com.teamgaslight.busdetective" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BusDetective</name>
    <description>Find your bus!</description>
    <author email="hello@teamgaslight.com" href="https://teamgaslight.com">Gaslight</author>

    <content src="http://busdetective.com" />

    <!-- Android cannot connect to the website without it being whitelisted -->
    <allow-navigation href="*://*.busdetective.com/*" />

    <access origin="*" />

    <icon src="www/icon.png" />



    <!-- iPhone 6 Plus  -->
    <icon src="www/icon-build/icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="www/icon-build/icon-60.png" width="60" height="60" />
    <icon src="www/icon-build/icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="www/icon-build/icon-76.png" width="76" height="76" />
    <icon src="www/icon-build/icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="www/icon-build/icon-40.png" width="40" height="40" />
    <icon src="www/icon-build/icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="www/icon-build/icon.png" width="57" height="57" />
    <icon src="www/icon-build/icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="www/icon-build/icon-72.png" width="72" height="72" />
    <icon src="www/icon-build/icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/icon-build/icon-small.png" width="29" height="29" />
    <icon src="www/icon-build/icon-small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/icon-build/icon-50.png" width="50" height="50" />
    <icon src="www/icon-build/icon-50@2x.png" width="100" height="100" />

    <!-- Android Medium Density (MDPI - x2) - 48px -->
    <icon src="www/icon-build/icon-48.png" width="48" height="48" />
    <!-- Android High Density (HDPI - x3) - 72px -->
    <!-- Included for iPad -->
    <!-- Android X-High Density (XHDPI -x4) - 96px -->
    <icon src="www/icon-build/icon-96.png" width="96" height="96" />
    <!-- Android XX-High Density (XXHDPI - x6) - 144px -->
    <icon src="www/icon-build/icon-144.png" width="144" height="144" />
    <!-- Android XXX-High Density (XXXHDPI - x8) - 192px -->
    <icon src="www/icon-build/icon-192.png" width="192" height="192" />
    <!-- Android App Store - 512px -->
    <icon src="www/icon-build/icon-512.png" width="512" height="512" />

    <preference name="EnableViewportScale" value="true"/>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#444444" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
